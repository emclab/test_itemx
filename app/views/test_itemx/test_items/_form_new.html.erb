<%= simple_form_for @test_item do |f| %>    

  <%= f.input :standard_id, :label => "测试标准 ：", :collection => Standard.active_std.all %>
  <%= f.input :name, :label => "名称 ：" %> 
  <%= f.input :short_name, :label => "简称 ：", :hint => '2-6字' %> 
  <%= f.input :description, :label => "内容 ：" %> 
  <%= f.input :rate, :label => "收费￥:" %>
  <%= f.input :sub_lease, :label => "外包？:", :as => :radio_buttons, :selected => false %>
  <%= f.button :submit %>  
<% end %> 


